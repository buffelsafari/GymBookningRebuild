@model GymBooking.Front.Models.ViewModels.GymClasses.GymClassButtonsModelView

@if (Model.IsEditAvailable)
{
    <a asp-action="Edit" asp-route-id="@Model.GymClassId" class="btn btn-primary">Edit</a>
}
@if (Model.IsDeleteAvailable)
{
    <a asp-action="Delete" asp-route-id="@Model.GymClassId" class="btn btn-danger">Delete</a>
}
@if (Model.IsBookingAvailable)
{ 
    @if(Model.IsBooked)
    {
        <button value=@Model.GymClassId class="booking btn btn-danger">unbook</button>
    }
    else
    {
        <button value=@Model.GymClassId class="booking btn btn-success">book</button>
    }
}
@if (Model.IsDetailsAvailable)
{
    <a asp-action="Details" asp-route-id="@Model.GymClassId" class="btn btn-info">Details</a>
}

